<?xml version='1.0' encoding='utf-8' ?>
<odoo>
    <record id="view_track_list" model="ir.ui.view">
        <field name="name">view_track_list</field>
        <field name="model">bad_odoo.track</field>
        <field name="arch" type="xml">
            <list js_class="bad_odoo_tracks_list">
                <field name="thumbnail" widget="image" />
                <field name="name" />
                <button
                    name="action_play"
                    icon="fa-play"
                    type="object"
                    string="Play"
                    class="btn btn-primary"
                />
            </list>
        </field>
    </record>

    <record id="view_track_kanban" model="ir.ui.view">
        <field name="name">view_track_kanban</field>
        <field name="model">bad_odoo.track</field>
        <field name="arch" type="xml">
            <kanban
                class="o_kanban_mobile"
                sample="1"
                quick_create="false"
                create="False"
                js_class="bad_odoo_tracks_kanban"
            >
                <field name="id" />
                <templates>
                    <t t-name="card">
                        <t
                            t-set="image_url"
                            t-value="'/web/image/bad_odoo.track/' + record.id.raw_value + '/thumbnail' "
                        />
                        <div
                            t-attf-style="height: 200px; background-image: url(#{image_url}); background-size: cover; background-repeat: no-repeat; background-position: center;"
                        />

                        <div
                            class="d-flex align-items-center flex-row font-monospace pt-3"
                        >
                            <button
                                name="action_play"
                                type="object"
                                string="Play"
                                icon="fa-play"
                                class="btn btn-outline-primary me-2"
                            />
                            <field name="name" />
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="actions_bad_odoo_tracks_act_window" model="ir.actions.act_window">
        <field name="name">Tracks</field>
        <field name="res_model">bad_odoo.track</field>
        <field name="view_mode">kanban,list</field>
        <field name="view_id" ref="view_track_kanban" />
    </record>

    <record id="actions_client_bad_odoo" model="ir.actions.client">
        <field name="name">Bad Odoo</field>
        <field name="tag">bad_odoo</field>
    </record>

    <menuitem
        name="Bit Cinema"
        id="menu_tracks"
        action="actions_bad_odoo_tracks_act_window"
        web_icon="bad_odoo,static/description/menu.png"
    />
</odoo>
