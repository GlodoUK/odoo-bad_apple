<?xml version='1.0' encoding='utf-8' ?>
<templates xml:space="preserve">
	<t t-name="BadOdoo.Template">
        <t t-if="!state.loaded">
            <div
                class="bad_odoo-container font-monospace align-items-center justify-content-center d-flex"
            >
                <div class="bad_odoo-loading">Loading</div>
            </div>
        </t>
        <t t-if="state.loaded">
            <div class="bad_odoo-container">
                <div class="bad_odoo-controls">
                    <button
                        t-on-click="play"
                        class="btn btn-primary"
                        t-if="!state.playing"
                    >
                        <i class="fa fa-play" />
                    </button>
                    <button
                        t-on-click="pause"
                        class="btn btn-secondary"
                        t-if="state.playing"
                    >
                        <i class="fa fa-pause" />
                    </button>

                    <div>Now playing <t t-out="name" /></div>
                </div>
                <div
                    class="bad_odoo-grid"
                    t-attf-style="grid-template-columns: repeat(#{ state.width }, 1fr); grid-template-rows: repeat(#{ state.height }, 1fr)"
                >
                    <t
                        t-foreach="state.frames[state.frameIndex]"
                        t-as="row"
                        t-key="row_index"
                    >
                        <t t-foreach="row" t-as="pixel" t-key="pixel_index">
                            <div
                                class="bad_odoo-cell rounded"
                                t-att-class="pixel &gt; 0 ? 'text-white bg-white' : 'bg-primary text-primary'"
                            />
                        </t>
                    </t>
                </div>
            </div>
        </t>
    </t>
</templates>
